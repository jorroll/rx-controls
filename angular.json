{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "yarn"
  },
  "newProjectRoot": "projects",
  "defaultProject": "reactive-form-controls-angular",
  "projects": {
    "reactive-form-controls": {
      "projectType": "library",
      "root": "projects/reactive-form-controls",
      "sourceRoot": "projects/reactive-form-controls/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/reactive-form-controls/tsconfig.lib.json",
            "project": "projects/reactive-form-controls/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/reactive-form-controls/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "tsConfig": "projects/reactive-form-controls/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/reactive-form-controls/tsconfig.lib.json",
              "projects/reactive-form-controls/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "reactive-form-controls-angular": {
      "projectType": "library",
      "root": "projects/reactive-form-controls-angular",
      "sourceRoot": "projects/reactive-form-controls-angular/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/reactive-form-controls-angular/tsconfig.lib.json",
            "project": "projects/reactive-form-controls-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/reactive-form-controls-angular/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "tsConfig": "projects/reactive-form-controls-angular/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/reactive-form-controls-angular/tsconfig.lib.json",
              "projects/reactive-form-controls-angular/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  }
}
